<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.5" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="balls.Controller">
   <Pane fx:id="canvas" minWidth="400.0" scaleShape="false"/>
   <VBox alignment="TOP_CENTER" maxWidth="200.0" minWidth="200.0" spacing="10.0" SplitPane.resizableWithParent="false">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <Button fx:id="startStopButton" mnemonicParsing="false" text="Start" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="40.0" top="20.0"/>
         </VBox.margin>
      </Button>
      <Label text="Balls count" textAlignment="CENTER"/>
      <Slider fx:id="ballCount" blockIncrement="5.0" majorTickUnit="1.0" max="20.0" minorTickCount="1"
              showTickMarks="true" snapToTicks="true" value="1.0"/>
      <Label fx:id="countLabel" text="1" textAlignment="CENTER"/>
   </VBox>
</SplitPane>
